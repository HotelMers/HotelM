    <!--  左边导航栏end  -->
    <!--  主要内容区start  -->
      <div class="main">
              <div class="ui grid">
                      <div class="four wide column"></div>
                      <div class="eight wide column">
                        <form class="ui form segment" method="post" id = "myFrm">
                          <div class="field required">
                            <label>身份证号</label>
                            <input placeholder="身份证号（18位数字）" type="text" name="idcard"  value=<%=customer.id%>>
                          </div>
                          <input type="submit" class="ui button fluid" value="预定查找">
                          <div class="field required">
                            <label>姓名</label>
                            <input placeholder="姓名" type="text" name="name" value=<%=customer.name%>>
                          </div>
                          <div class="field required">
                            <label>移动电话</label>
                            <input placeholder="移动电话" type="text" name="phone" value=<%=customer.phone%>>
                          </div>
                          <div class="field required">
                            <label>房间类型</label>
                            <input placeholder="房间类型（单人房/双人房/大房）" type="text" name="roomtype" value=<%=bookinfo.type%>>
                          </div>
                          <div class="field required">
                            <label>入住时间</label>
                            <input placeholder="入住时间（格式：YYYYMMDD）" type="text" name="starttime" value=<%=bookinfo.startdate%>>
                          </div>
                          <div class="field required">
                              <label>退房时间</label>
                              <input placeholder="退房时间（格式：YYYYMMDD）" type="text" name="endtime" value=<%=bookinfo.enddate%>>
                            </div>
                          <div class="field required">
                            <label>房间号</label>
                            <input placeholder="点击登记入住后自动获取房间号" type="text" name="roomnum" disabled = true value=<%=roomnum%>>
                          </div>
                          <input type="submit" class="ui button fluid" value="确认入住">
                        </form>  
                      </div>
                    </div>
            </div>
    <!--  右侧边栏    -->
        <div class="right-side">
            <footer>
              <div class="footer-l">
              </div>
            </footer>
        </div>
      </div>
    </div>
