<%- include('header') %>
<div class="wrapper">
    <!--  左边导航栏start  -->
    <%- include('left-nav') %>
    <!--  左边导航栏end  -->
    <!--  主要内容区start  -->
      <div class="main">
          <div class="ui grid">
              <div class="four wide column"></div>
              <div class="eight wide column">
                <form class="ui form segment" method="post" id = "myFrm">
                    <div class="field required">
                        <label>房间号</label>
                        <input placeholder="房间号" type="text" name="roomid" value=<%=checkinfo.roomid%>>
                      </div>
                      <input type="submit" class="ui button fluid" value="查找">
                      <div>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</div>
                      <div class="field required">
                       <label>姓名</label>
                        <input placeholder="姓名" type="text" name="name" value=<%=checkinfo.name%>>
                      </div>
                      <div class="field required">
                          <label>身份证号</label>
                          <input placeholder="身份证号" type="text" name="idcard" value=<%=checkinfo.CustomerId%>>
                        </div>
                      <div class="field required">
                          <label>电话</label>
                          <input placeholder="电话" type="text" name="phone" value=<%=checkinfo.phone%>>
                        </div>
                      <div class="field required">
                        <label>房间类型</label>
                        <input placeholder="房间类型" type="text" name="roomtype" value=<%=checkinfo.roomtype%>>
                      </div>
                      <div class="field required">
                          <label>入住时间</label>
                          <input placeholder="入住时间" type="text" name="starttime" value=<%=checkinfo.startdate%>>
                        </div>
                        <div class="field required">
                            <label>退房时间</label>
                            <input placeholder="退房时间" type="text" name="endtime" value=<%=checkinfo.enddate%>>
                          </div>
                        <div class="field required">
                          <label>房费总计</label>
                          <input placeholder="房费总计" type="text" name="payment" value=<%=checkinfo.payment%>>
                        </div>
                    <input type="submit" class="ui button fluid" value="确认退房">
                </form>  
              </div>
            </div>
    </div>

    <!--  右侧边栏    -->
        <div class="right-side">
            <footer>
              <div class="footer-l">
              </div>
            </footer>
        </div>
      </div>
    </div>
