<script type="text/javascript">
    $(function () {
            $("input[type='submit']").click(function () {
                var text = $(this).val();
                if (text == "确认入住") {
                    $("#myFrm").attr("action", "/checkin/getRoom");
                }
                else if (text == "预定查找") {
                    $("#myFrm").attr("action", "/checkin");
                }
                else if (text == "会员查找") {
                    $("#myFrm").attr("action", "/checkin/searchVIP");
                }
            })
        })
    $(document).ready(function () {
       // 点击按钮弹出下拉框
       $('.ui.dropdown').dropdown();
       
       // 鼠标悬浮在头像上，弹出气泡提示框
       $('.post-content .avatar-link').popup({
         inline: true,
         position: 'bottom right',
         lastResort: 'bottom right'
       });
     })
   </script>
   </body>
 </html>
